<?xml version="1.0"?>
<root>
  <item>
    <name>Logitech N305 Hack</name>
    <identifier>private.logitech_n305_hack_use_simultaneous</identifier>

    <autogen>
      __KeyToKey__
      KeyCode::KEYPAD_0, ModifierFlag::EXTRA1,
      KeyCode::VK_NONE,
      KeyCode::VK_STICKY_EXTRA1_FORCE_OFF,
    </autogen>

    <block>
      <inputsource_only>FRENCH</inputsource_only>

      <!-- Equal -->
      <autogen>
        __SimultaneousKeyPresses__
        @begin
        KeyCode::OPTION_L, KeyCode::KEYPAD_6, KeyCode::KEYPAD_1,
        @end
        KeyCode::KEYPAD_EQUAL,
      </autogen>

      <!-- Right Parenthesis -->
      <autogen>
        __SimultaneousKeyPresses__
        @begin
        KeyCode::OPTION_L, KeyCode::KEYPAD_4, KeyCode::KEYPAD_1,
        @end
        KeyCode::MINUS,
      </autogen>

      <!-- Left Parenthesis -->
      <autogen>
        __SimultaneousKeyPresses__
        @begin
        KeyCode::OPTION_L, KeyCode::KEYPAD_4,
        @end
        KeyCode::KEY_5,
        KeyCode::VK_STICKY_EXTRA1_FORCE_ON,
      </autogen>

    </block>

    <block>
      <!-- Equal -->
      <autogen>
        __SimultaneousKeyPresses__
        @begin
        KeyCode::OPTION_L, KeyCode::KEYPAD_6, KeyCode::KEYPAD_1,
        @end
        KeyCode::KEYPAD_EQUAL,
      </autogen>

      <!-- Right Parenthesis -->
      <autogen>
        __SimultaneousKeyPresses__
        @begin
        KeyCode::OPTION_L, KeyCode::KEYPAD_4, KeyCode::KEYPAD_1,
        @end
        KeyCode::KEY_0, ModifierFlag::SHIFT_L,
      </autogen>

      <!-- Left Parenthesis -->
      <autogen>
        __SimultaneousKeyPresses__
        @begin
        KeyCode::OPTION_L, KeyCode::KEYPAD_4,
        @end
        KeyCode::KEY_9, ModifierFlag::SHIFT_L,
        KeyCode::VK_STICKY_EXTRA1_FORCE_ON,
      </autogen>
    </block>

  </item>
</root>

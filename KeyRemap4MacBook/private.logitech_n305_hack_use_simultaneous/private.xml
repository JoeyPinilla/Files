<?xml version="1.0"?>
<root>
  <item>
    <name>Logitech N305 Hack</name>
    <identifier>private.logitech_n305_hack_use_simultaneous</identifier>

    <block>
      <inputsource_only>FRENCH</inputsource_only>

      <!-- Equal -->
      <autogen>
        __SimultaneousKeyPresses__
        __{ KeyCode::OPTION_L, KeyCode::KEYPAD_6, KeyCode::KEYPAD_1, }__
        KeyCode::KEYPAD_EQUAL,
      </autogen>

      <!-- Left Parenthesis -->
      <autogen>
        __SimultaneousKeyPresses__
        __{ KeyCode::OPTION_L, KeyCode::KEYPAD_4, KeyCode::KEYPAD_0, }__
        KeyCode::KEY_5,
      </autogen>

      <!-- Right Parenthesis -->
      <autogen>
        __SimultaneousKeyPresses__
        __{ KeyCode::OPTION_L, KeyCode::KEYPAD_4, KeyCode::KEYPAD_1, }__
        KeyCode::MINUS,
      </autogen>
    </block>

    <block>
      <!-- Equal -->
      <autogen>
        __SimultaneousKeyPresses__
        __{ KeyCode::OPTION_L, KeyCode::KEYPAD_6, KeyCode::KEYPAD_1, }__
        KeyCode::KEYPAD_EQUAL,
      </autogen>

      <!-- Left Parenthesis -->
      <autogen>
        __SimultaneousKeyPresses__
        __{ KeyCode::OPTION_L, KeyCode::KEYPAD_4, KeyCode::KEYPAD_0, }__
        KeyCode::KEY_8, ModifierFlag::SHIFT_L,
      </autogen>

      <!-- Right Parenthesis -->
      <autogen>
        __SimultaneousKeyPresses__
        __{ KeyCode::OPTION_L, KeyCode::KEYPAD_4, KeyCode::KEYPAD_1, }__
        KeyCode::KEY_9, ModifierFlag::SHIFT_L,
      </autogen>
    </block>

  </item>
</root>

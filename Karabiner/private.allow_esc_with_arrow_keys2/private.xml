<?xml version="1.0"?>
<root>

  <modifierdef>ARROW</modifierdef>

  <item>
    <name>Allow Shift+WASD keys to behave like arrow keys</name>
    <identifier>private.allow_esc_with_arrow_keys2</identifier>

    <autogen>
      __KeyOverlaidModifier__
      KeyCode::SHIFT_L,
      KeyCode::SHIFT_L,
      KeyCode::VK_LOCK_ARROW,
    </autogen>

    <block>
      <modifier_only>ModifierFlag::ARROW</modifier_only>
      <autogen>
        __KeyToKey__
        KeyCode::W,
        KeyCode::CURSOR_UP,
      </autogen>
      <autogen>
        __KeyToKey__
        KeyCode::A,
        KeyCode::CURSOR_LEFT,
      </autogen>
      <autogen>
        __KeyToKey__
        KeyCode::S,
        KeyCode::CURSOR_DOWN,
      </autogen>
      <autogen>
        __KeyToKey__
        KeyCode::D,
        KeyCode::CURSOR_RIGHT,
      </autogen>
    </block>
  </item>
</root>

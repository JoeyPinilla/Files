    <identifier>private.functional_mode</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::BACKQUOTE, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND | MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_OPTION | ModifierFlag::NONE,
      KeyCode::VK_CONFIG_TOGGLE_private_functional_mode_core,

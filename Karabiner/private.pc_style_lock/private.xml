<?xml version="1.0"?>
<root>

  <vkopenurldef>
    <name>KeyCode::VK_OPEN_URL_SHELL_sleep_with_delay</name>
    <url type="shell">
      <![CDATA[    sleep 0.5 && /usr/bin/osascript -e 'tell application "System Events" to sleep'    ]]>
    </url>
  </vkopenurldef>

  <item>
    <name>Use PC Style Lock Screen (Lock screen by command-L)</name>
    <identifier>private.pc_style_lock</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::L, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND | ModifierFlag::NONE,
      KeyCode::VK_OPEN_URL_SHELL_sleep_with_delay,
    </autogen>
  </item>

</root>

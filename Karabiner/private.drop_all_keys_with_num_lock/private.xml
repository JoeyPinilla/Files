<?xml version="1.0"?>
<root>

  <modifierdef>MY_NUMLOCK</modifierdef>

  <item>
    <name>Disable all keys with num lock</name>
    <identifier>private.drop_all_keys_with_num_lock</identifier>

    <autogen>
      __KeyToKey__
      KeyCode::PC_KEYPAD_NUMLOCK,
      KeyCode::VK_LOCK_MY_NUMLOCK,
    </autogen>

    <autogen>
      __DropAllKeys__
      ModifierFlag::MY_NUMLOCK,

      Option::DROPALLKEYS_DROP_KEY,
      Option::DROPALLKEYS_DROP_CONSUMERKEY,
      Option::DROPALLKEYS_DROP_POINTINGBUTTON,
    </autogen>

    <block>
      <modifier_only>ModifierFlag::MY_NUMLOCK</modifier_only>
      <autogen>__KeyToKey__ KeyCode::COMMAND_L, KeyCode::VK_NONE</autogen>
      <autogen>__KeyToKey__ KeyCode::COMMAND_R, KeyCode::VK_NONE</autogen>
      <autogen>__KeyToKey__ KeyCode::CONTROL_L, KeyCode::VK_NONE</autogen>
      <autogen>__KeyToKey__ KeyCode::CONTROL_R, KeyCode::VK_NONE</autogen>
      <autogen>__KeyToKey__ KeyCode::FN, KeyCode::VK_NONE</autogen>
      <autogen>__KeyToKey__ KeyCode::OPTION_L, KeyCode::VK_NONE</autogen>
      <autogen>__KeyToKey__ KeyCode::OPTION_R, KeyCode::VK_NONE</autogen>
      <autogen>__KeyToKey__ KeyCode::SHIFT_L, KeyCode::VK_NONE</autogen>
      <autogen>__KeyToKey__ KeyCode::SHIFT_R, KeyCode::VK_NONE</autogen>
    </block>
  </item>

</root>

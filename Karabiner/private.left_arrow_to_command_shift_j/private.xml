<?xml version="1.0"?>
<root>

  <item>
    <name>Change left-arrow key to command-shift-J</name>
    <identifier>private.left_arrow_to_command_shift_j</identifier>

    <autogen>
      __KeyToKey__
      KeyCode::CURSOR_LEFT | ModifierFlag::NONE,
      KeyCode::J, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND | MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT,
    </autogen>
  </item>

  <item>
    <name>Change command-shift-J to left-arrow key</name>
    <identifier>private.command_shift_j_to_left_arrow</identifier>

    <autogen>
      __KeyToKey__
      KeyCode::J, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND | MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT | ModifierFlag::NONE,
      KeyCode::CURSOR_LEFT,
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::K, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND | MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT | ModifierFlag::NONE,
      KeyCode::CURSOR_RIGHT,
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::L, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND | MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT | ModifierFlag::NONE,
      KeyCode::CURSOR_DOWN,
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::SEMICOLON, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND | MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT | ModifierFlag::NONE,
      KeyCode::CURSOR_UP,
    </autogen>
  </item>

</root>

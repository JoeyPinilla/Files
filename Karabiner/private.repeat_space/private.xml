<root>

  <item>
    <name>Set the space key repeat rate</name>
    <identifier>private.repeat_space</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::SPACE,
      KeyCode::SPACE,

      <!-- 300 millisecond -->
      DelayUntilRepeat::RawValue::300,
      <!-- 30 millisecond -->
      KeyRepeat::RawValue::30,
    </autogen>
  </item>


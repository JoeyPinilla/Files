<?xml version="1.0"?>
<root>

  <item>
    <name>Rotate scroll wheel while button5 is pressed.</name>
    <identifier>private.button5_rotate_scroll_wheel</identifier>

    <autogen>__KeyToKey__ PointingButton::BUTTON5, KeyCode::VK_MODIFIER_BUTTON5</autogen>

    <block>
      <modifier_only>ModifierFlag::BUTTON5</modifier_only>
      <autogen>
        __FlipScrollWheel__
        Option::FLIPSCROLLWHEEL_ROTATE,
      </autogen>
    </block>
  </item>

  <item>
    <name>Rotate scroll wheel while button5 is pressed. (reverse)</name>
    <identifier>private.button5_rotate_scroll_wheel_reverse</identifier>

    <autogen>__KeyToKey__ PointingButton::BUTTON5, KeyCode::VK_MODIFIER_BUTTON5</autogen>

    <block>
      <modifier_only>ModifierFlag::BUTTON5</modifier_only>
      <autogen>
        __FlipScrollWheel__
        Option::FLIPSCROLLWHEEL_HORIZONTAL,
        Option::FLIPSCROLLWHEEL_VERTICAL,
        Option::FLIPSCROLLWHEEL_ROTATE,
      </autogen>
    </block>
  </item>

</root>
